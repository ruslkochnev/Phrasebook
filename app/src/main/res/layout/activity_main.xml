<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPurple700"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/app_name"
        app:titleTextColor="@color/colorWhite" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginRight="@dimen/margin16dp"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin16dp"
            android:layout_marginTop="@dimen/margin16dp"
            android:layout_marginEnd="@dimen/margin16dp"
            android:layout_marginBottom="@dimen/margin16dp"
            android:background="@null"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonTrip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/trip"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonTransport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/transport"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonHotel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/hotel"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCafe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/cafe"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonExcursion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/excursion"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBuy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/buy"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonRadio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/radio"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/bank"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonHealth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/health"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCommon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight_normal"
                android:layout_marginBottom="@dimen/margin4dp"
                android:background="@color/colorPurple700"
                android:onClick="@string/onClick"
                android:text="@string/common"
                android:textSize="@dimen/textSize18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/leaderboardBannerHeight"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin16dp"
            android:background="@null"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6978053805119593/7321619267" />
    </RelativeLayout>
</RelativeLayout>